<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_orden_servicio_tree" model="ir.ui.view">
        <field name="name">secadora.orden.servicio.tree</field>
        <field name="model">secadora.orden.servicio</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="fecha_inicio"/>
                <field name="cliente_id"/>
                <field name="tipo_servicio_id"/>
                <field name="peso_entrada"/>
                <field name="peso_salida_real"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_orden_servicio_form" model="ir.ui.view">
        <field name="name">secadora.orden.servicio.form</field>
        <field name="model">secadora.orden.servicio</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_iniciar_proceso" type="object" string="Iniciar Proceso"
                            class="oe_highlight" invisible="state != 'borrador'"/>
                    <button name="action_listo_liquidar" type="object" string="Listo para Liquidar"
                            class="oe_highlight" invisible="state != 'en_proceso'"/>
                    <button name="action_confirmar_liquidacion" type="object" string="Confirmar Liquidación"
                            class="oe_highlight" invisible="state != 'listo_liquidar'"/>
                        <button name="action_generar_factura" type="object" string="Generar Factura"
                            class="oe_highlight" invisible="state not in ('listo_liquidar', 'liquidado') or factura_id"/>
                        <button name="action_ver_factura" type="object" string="Ver Factura"
                            class="btn-secondary" invisible="not factura_id"/>

                    <!-- Botones para retroceder estados -->
                    <button name="action_volver_proceso" type="object" string="← Volver a En Proceso"
                            invisible="state not in ('listo_liquidar', 'liquidado')"/>
                    <button name="action_volver_borrador" type="object" string="← Volver a Borrador"
                            invisible="state not in ('en_proceso', 'listo_liquidar', 'liquidado')"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Facturado - No Modificable" bg_color="text-bg-danger" invisible="state != 'facturado'"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_ver_pesajes" type="object"
                                class="oe_stat_button" icon="fa-truck"
                                invisible="pesaje_count == 0">
                            <field name="pesaje_count" widget="statinfo" string="Pesajes"/>
                        </button>
                        <button name="action_crear_pesaje_entrada" type="object"
                                class="oe_stat_button" icon="fa-sign-in">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Crear</span>
                                <span class="o_stat_text">Entrada</span>
                            </div>
                        </button>
                        <button name="action_crear_pesaje_salida" type="object"
                                class="oe_stat_button" icon="fa-sign-out">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Crear</span>
                                <span class="o_stat_text">Salida</span>
                            </div>
                        </button>
                        <button name="action_ver_factura" type="object"
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="not factura_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Ver</span>
                                <span class="o_stat_text">Factura</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="cliente_id"
                                   readonly="state == 'facturado'"
                                   options="{'no_open': False, 'no_create': False}"
                                   context="{'default_is_company': False, 'default_customer_rank': 1, 'res_partner_search_mode': 'customer', 'show_vat': True}"/>
                            <field name="tipo_servicio_id"
                                   readonly="state == 'facturado'"
                                   options="{'no_create': True, 'no_open': False}"/>
                        </group>
                        <group>
                            <field name="fecha_inicio" readonly="state == 'facturado'"/>
                            <field name="modalidad_salida" readonly="state == 'facturado'"/>
                            <field name="factura_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="observaciones"
                               readonly="state == 'facturado'"
                               placeholder="Variedades, instrucciones especiales, notas..."/>
                    </group>
                    <notebook>
                        <page string="Pesajes">
                            <group string="Pesajes de Entrada">
                                <field name="pesaje_entrada_ids" readonly="1" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="fecha"/>
                                        <field name="vehiculo_id"/>
                                        <field name="peso_neto"/>
                                        <field name="state" widget="badge"/>
                                    </list>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="peso_entrada" string="Total Entrada" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                            <group string="Pesajes de Salida">
                                <field name="pesaje_salida_ids" readonly="1" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="fecha"/>
                                        <field name="vehiculo_id"/>
                                        <field name="peso_neto"/>
                                        <field name="state" widget="badge"/>
                                    </list>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="peso_salida_bascula" string="Total Salida" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bultos" invisible="modalidad_salida != 'bultos'">
                            <field name="registro_bultos_ids" readonly="state == 'facturado'">
                                <list editable="bottom">
                                    <field name="fecha"/>
                                    <field name="producto_empaque_id"/>
                                    <field name="cantidad" sum="Total Bultos"/>
                                    <field name="peso_promedio"/>
                                    <field name="peso_total" sum="Peso Total"/>
                                    <field name="proveedor_empaque"/>
                                    <field name="precio_unitario_empaque"/>
                                    <field name="subtotal_empaque" sum="Total Empaques"/>
                                    <field name="observaciones" optional="show"/>
                                </list>
                            </field>
                        </page>
                        <page string="Servicios">
                            <field name="linea_servicio_ids" readonly="state == 'facturado'">
                                <list editable="bottom">
                                    <field name="producto_id"/>
                                    <field name="descripcion" optional="hide"/>
                                    <field name="base_calculo" optional="hide"/>
                                    <field name="cantidad"/>
                                    <field name="precio_unitario" force_save="1"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="subtotal_servicios" string="Total Servicios" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Liquidación">
                            <group>
                                <group string="Pesos">
                                    <field name="peso_entrada" readonly="1"/>
                                    <field name="peso_salida_real" readonly="1"/>
                                </group>
                                <group string="Merma">
                                    <field name="merma_real" readonly="1"/>
                                    <field name="merma_real_porcentaje" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_orden_servicio" model="ir.actions.act_window">
        <field name="name">Órdenes de Servicio</field>
        <field name="res_model">secadora.orden.servicio</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>