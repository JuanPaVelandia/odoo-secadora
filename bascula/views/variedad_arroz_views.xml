<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista Tree de Variedades de Arroz -->
        <record id="view_secadora_variedad_arroz_tree" model="ir.ui.view">
            <field name="name">secadora.variedad.arroz.tree</field>
            <field name="model">secadora.variedad.arroz</field>
            <field name="arch" type="xml">
                <tree string="Variedades de Arroz">
                    <field name="name"/>
                    <field name="codigo"/>
                    <field name="descripcion"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form de Variedades de Arroz -->
        <record id="view_secadora_variedad_arroz_form" model="ir.ui.view">
            <field name="name">secadora.variedad.arroz.form</field>
            <field name="model">secadora.variedad.arroz</field>
            <field name="arch" type="xml">
                <form string="Variedad de Arroz">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="Ej: Fedearroz 67"/>
                                <field name="codigo"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="descripcion" placeholder="Descripción de la variedad..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Search de Variedades de Arroz -->
        <record id="view_secadora_variedad_arroz_search" model="ir.ui.view">
            <field name="name">secadora.variedad.arroz.search</field>
            <field name="model">secadora.variedad.arroz</field>
            <field name="arch" type="xml">
                <search string="Buscar Variedades">
                    <field name="name"/>
                    <field name="codigo"/>
                    <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Acción de Variedades de Arroz -->
        <record id="action_secadora_variedad_arroz" model="ir.actions.act_window">
            <field name="name">Variedades de Arroz</field>
            <field name="res_model">secadora.variedad.arroz</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear una nueva variedad
                </p>
                <p>
                    Registre las variedades de arroz (Ej: Fedearroz 67, IR 1529).
                </p>
            </field>
        </record>

    </data>
</odoo>
