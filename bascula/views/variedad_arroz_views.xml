<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Tree de Variedad de Arroz -->
    <record id="view_variedad_arroz_tree" model="ir.ui.view">
        <field name="name">secadora.variedad.arroz.tree</field>
        <field name="model">secadora.variedad.arroz</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="name"/>
                <field name="descripcion"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de Variedad de Arroz -->
    <record id="view_variedad_arroz_form" model="ir.ui.view">
        <field name="name">secadora.variedad.arroz.form</field>
        <field name="model">secadora.variedad.arroz</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" 
                            invisible="active"/>
                    <group>
                        <group>
                            <field name="name" placeholder="Ej: Fedearroz 67"/>
                            <field name="codigo" placeholder="Ej: F67"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <field name="descripcion" placeholder="Descripción de la variedad..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para Variedad de Arroz -->
    <record id="action_variedad_arroz" model="ir.actions.act_window">
        <field name="name">Variedades de Arroz</field>
        <field name="res_model">secadora.variedad.arroz</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear primera variedad de arroz
            </p>
            <p>
                Crea un catálogo de variedades de arroz para clasificar tus productos.
            </p>
        </field>
    </record>

</odoo>
