<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista -->
    <record id="view_orden_lote_tree" model="ir.ui.view">
        <field name="name">secadora.orden.lote.tree</field>
        <field name="model">secadora.orden.lote</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="tipo_operacion_id"/>
                <field name="peso_entrada"/>
                <field name="peso_salida"/>
                <field name="merma"/>
                <field name="merma_porcentaje"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_orden_lote_form" model="ir.ui.view">
        <field name="name">secadora.orden.lote.form</field>
        <field name="model">secadora.orden.lote</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_crear_pesaje_entrada" type="object" string="Crear Pesaje Entrada"
                            class="oe_highlight" icon="fa-sign-in"/>
                    <button name="action_crear_pesaje_salida" type="object" string="Crear Pesaje Salida"
                            icon="fa-sign-out"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="orden_id" readonly="1"/>
                            <field name="tipo_operacion_id"
                                   domain="[('es_servicio', '=', True)]"
                                   options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <field name="observaciones" placeholder="Variedad, instrucciones específicas de este lote..."/>
                    </group>
                    <notebook>
                        <page string="Pesajes">
                            <group string="Pesajes de Entrada">
                                <field name="pesaje_entrada_ids" readonly="1" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="fecha"/>
                                        <field name="vehiculo_id"/>
                                        <field name="peso_neto"/>
                                        <field name="state" widget="badge"/>
                                    </list>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="peso_entrada" string="Total Entrada" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                            <group string="Pesajes de Salida">
                                <field name="pesaje_salida_ids" readonly="1" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="fecha"/>
                                        <field name="vehiculo_id"/>
                                        <field name="peso_neto"/>
                                        <field name="state" widget="badge"/>
                                    </list>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="peso_salida" string="Total Salida" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                        <page string="Merma">
                            <group>
                                <group string="Pesos">
                                    <field name="peso_entrada" readonly="1"/>
                                    <field name="peso_salida" readonly="1"/>
                                </group>
                                <group string="Merma">
                                    <field name="merma" readonly="1"/>
                                    <field name="merma_porcentaje" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_orden_lote" model="ir.actions.act_window">
        <field name="name">Lotes de Servicio</field>
        <field name="res_model">secadora.orden.lote</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
