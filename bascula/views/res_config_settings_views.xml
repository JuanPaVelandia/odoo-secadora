<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit res.config.settings -->
        <record id="res_config_settings_view_form_inherit_bascula" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.bascula</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Báscula" string="Báscula"
                         data-key="bascula" groups="bascula.group_bascula_admin">
                        <h2>Integración con Báscula</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="bascula_api_key" string="API Key"/>
                                    <div class="text-muted">
                                        Clave secreta para comunicación con el bridge de báscula
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="bascula_api_key" placeholder="Ej: mi_clave_secreta_123" password="True"/>
                                            <button string="Generar API Key Aleatoria"
                                                    name="action_generate_bascula_api_key"
                                                    type="object"
                                                    class="btn-link"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label string="Instrucciones"/>
                                    <div class="text-muted">
                                        <ul>
                                            <li>Genere o establezca una API Key segura</li>
                                            <li>Use esta API Key en el script del bridge</li>
                                            <li>El bridge debe ejecutarse en el PC conectado a la báscula</li>
                                            <li>Pruebe la conexión desde: <code>/api/bascula/test</code></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
