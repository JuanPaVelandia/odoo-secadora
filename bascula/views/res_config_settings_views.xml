<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit res.config.settings -->
        <record id="res_config_settings_view_form_inherit_bascula" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.bascula</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app string="Báscula" name="bascula" groups="bascula.group_bascula_admin">
                        <block title="Integración con Báscula">
                            <setting help="Clave secreta para comunicación con el bridge de báscula">
                                <label for="bascula_api_key" string="API Key"/>
                                <div>
                                    <field name="bascula_api_key" placeholder="Ej: mi_clave_secreta_123" password="True" class="oe_inline"/>
                                    <button string="Generar" name="action_generate_bascula_api_key" type="object" class="btn-link"/>
                                </div>
                            </setting>
                            <setting>
                                <div>
                                    <strong>Instrucciones:</strong>
                                    <ul>
                                        <li>Genere o establezca una API Key segura</li>
                                        <li>Use esta API Key en el script del bridge</li>
                                        <li>El bridge debe ejecutarse en el PC conectado a la báscula</li>
                                        <li>Endpoint de prueba: <code>/api/bascula/test</code></li>
                                    </ul>
                                </div>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
