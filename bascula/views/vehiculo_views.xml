<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista List de Vehículos -->
        <record id="view_secadora_vehiculo_list" model="ir.ui.view">
            <field name="name">secadora.vehiculo.list</field>
            <field name="model">secadora.vehiculo</field>
            <field name="arch" type="xml">
                <list string="Vehículos">
                    <field name="placa"/>
                    <field name="tipo_vehiculo"/>
                    <field name="capacidad_kg"/>
                    <field name="tara_promedio"/>
                    <field name="conductor_habitual_id"/>
                    <field name="transportadora_id"/>
                </list>
            </field>
        </record>

        <!-- Vista Form de Vehículos -->
        <record id="view_secadora_vehiculo_form" model="ir.ui.view">
            <field name="name">secadora.vehiculo.form</field>
            <field name="model">secadora.vehiculo</field>
            <field name="arch" type="xml">
                <form string="Vehículo">
                    <sheet>
                        <group>
                            <group>
                                <field name="placa" placeholder="ABC123"/>
                                <field name="tipo_vehiculo"/>
                                <field name="capacidad_kg"/>
                            </group>
                            <group>
                                <field name="tara_promedio"/>
                                <field name="conductor_habitual_id"/>
                                <field name="transportadora_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" placeholder="Notas adicionales..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Search de Vehículos -->
        <record id="view_secadora_vehiculo_search" model="ir.ui.view">
            <field name="name">secadora.vehiculo.search</field>
            <field name="model">secadora.vehiculo</field>
            <field name="arch" type="xml">
                <search string="Buscar Vehículos">
                    <field name="placa"/>
                    <field name="tipo_vehiculo"/>
                    <field name="conductor_habitual_id"/>
                    <field name="transportadora_id"/>
                    <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Tipo de Vehículo" name="group_tipo" context="{'group_by': 'tipo_vehiculo'}"/>
                        <filter string="Transportadora" name="group_transportadora" context="{'group_by': 'transportadora_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción de Vehículos -->
        <record id="action_secadora_vehiculo" model="ir.actions.act_window">
            <field name="name">Vehículos</field>
            <field name="res_model">secadora.vehiculo</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo vehículo
                </p>
                <p>
                    Registre las placas de los vehículos que transportan arroz.
                </p>
            </field>
        </record>

    </data>
</odoo>
