<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="bascula.PesoActualWidget" owl="1">
        <div class="o_field_widget">
            <div class="alert alert-success" style="padding: 15px; background-color: #d4edda; border: 2px solid #28a745; margin: 0;">
                <div style="text-align: center;">
                    <strong style="font-size: 14px;">PESO ACTUAL DESDE BASCULA</strong><br/>
                    <span style="font-size: 48px; font-weight: bold; color: #28a745;">
                        <t t-esc="state.peso.toFixed(2)"/> Kg
                    </span><br/>
                    <small style="color: #666;">
                        <t t-if="state.ultimaActualizacion">
                            Ultima actualizacion: <t t-esc="state.ultimaActualizacion"/>
                        </t>
                        <t t-else="">
                            Actualizando...
                        </t>
                    </small>
                </div>
            </div>
        </div>
    </t>

</templates>
