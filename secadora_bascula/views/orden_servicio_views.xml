<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Herencia: Smart button de pickings en formulario de orden de servicio -->
    <record id="view_orden_servicio_form_inherit_stock" model="ir.ui.view">
        <field name="name">secadora.orden.servicio.form.inherit.stock</field>
        <field name="model">secadora.orden.servicio</field>
        <field name="inherit_id" ref="bascula.view_orden_servicio_form"/>
        <field name="arch" type="xml">
            <!-- Agregar smart button de pickings en button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_ver_pickings" type="object"
                        class="oe_stat_button" icon="fa-cubes"
                        invisible="picking_count == 0">
                    <field name="picking_count" widget="statinfo" string="Inventario"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
