<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Regla: Descuento por Impurezas -->
        <record id="descuento_impurezas" model="secadora.descuento.calidad">
            <field name="name">Descuento por Impurezas</field>
            <field name="sequence">10</field>
            <field name="active" eval="True"/>
            <field name="parametro">impurezas</field>
            <field name="umbral">3.0</field>
            <field name="modo_descuento">porcentaje_exceso</field>
            <field name="factor">1.0</field>
        </record>

        <!-- Regla: Descuento por Grano Partido -->
        <record id="descuento_grano_partido" model="secadora.descuento.calidad">
            <field name="name">Descuento por Grano Partido</field>
            <field name="sequence">20</field>
            <field name="active" eval="False"/>
            <field name="parametro">grano_partido</field>
            <field name="umbral">5.0</field>
            <field name="modo_descuento">porcentaje_exceso</field>
            <field name="factor">1.0</field>
        </record>

        <!-- Regla: Descuento por Grano Rojo -->
        <record id="descuento_grano_rojo" model="secadora.descuento.calidad">
            <field name="name">Descuento por Grano Rojo</field>
            <field name="sequence">30</field>
            <field name="active" eval="False"/>
            <field name="parametro">grano_rojo</field>
            <field name="umbral">2.0</field>
            <field name="modo_descuento">porcentaje_exceso</field>
            <field name="factor">1.0</field>
        </record>

    </data>
</odoo>
